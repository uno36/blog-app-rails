<h1>Blog App</h1>

<article class='no-posts'>
  <div class='post-title' >
  <h1><%=@post.title%> by <%=@post.author.name%><h1>
  <div class='post-count-best'>Comments: <%=@post.comments_counter%>, Likes:<%=@post.likes_counter%>
  </div>
  <div><%=@post.text%></div>  
  <%= render 'partials/comment', comments: @comments %>
  
</article>

